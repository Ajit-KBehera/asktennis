# Railway Environment Configuration
# Copy these to your Railway environment variables

# Database
DATABASE_URL=your_railway_postgres_url_here

# API Keys
SPORTSDAR_API_KEY=your_sportsradar_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Application
NODE_ENV=production
PORT=3000

# Railway specific settings
RAILWAY_ENVIRONMENT=production
RAILWAY_GIT_COMMIT_SHA=latest
RAILWAY_GIT_BRANCH=main

# Database optimization for Railway
DB_POOL_SIZE=10
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Logging
LOG_LEVEL=info
ENABLE_QUERY_LOGGING=false

# Performance settings
CACHE_TTL=3600
MAX_QUERY_RESULTS=1000
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Data sync settings
ENABLE_BACKGROUND_SYNC=true
SYNC_INTERVAL=3600000
MAX_SYNC_RECORDS=10000
